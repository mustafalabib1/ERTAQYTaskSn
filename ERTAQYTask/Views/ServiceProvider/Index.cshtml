@model IEnumerable<PLProject.ViewModel.ServiceProviderViewModel.GetAllServiceProviderViewModel>

@{
    ViewData["Title"] = "Service Providers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Service Providers</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Service Provider
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var provider in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@provider.Name</h5>
                            <p class="card-text"><i class="bi bi-envelope"></i> @provider.Email</p>
                            <p class="card-text"><i class="bi bi-phone"></i> @(provider.Phone ?? "N/A")</p>
                            <p class="card-text"><i class="bi bi-geo-alt"></i> @(provider.Address ?? "N/A")</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">Created: @provider.CreatedDate.ToString("yyyy-MM-dd")</small>
                            <div class="btn-group float-end" role="group">
                                <a asp-action="Details" asp-route-id="@provider.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@provider.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@provider.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No service providers found. Click "Add New Service Provider" to create one.
        </div>
    }
</div>
