@model IEnumerable<GetAllProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h1>Products</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <a asp-action="Filter" class="btn btn-outline-info">Filter Products</a>
        <a asp-action="Search" class="btn btn-outline-secondary">Search by Price</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Creation Date</th>
                <th>Service Provider</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.CreationDate.ToString("yyyy-MM-dd")</td>
                    <td>@(item.ServiceProviderName ?? "N/A")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>