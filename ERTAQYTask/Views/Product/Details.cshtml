@model DetialProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <h1>Product Details</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div>
        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Creation Date</dt>
            <dd class="col-sm-9">@Model.CreationDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ServiceProviderName)</dt>
            <dd class="col-sm-9">@(Model.ServiceProviderName ?? "N/A")</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>