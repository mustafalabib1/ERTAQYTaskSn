@model DetialProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-box-seam"></i> Product Details
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="row g-4">
                        <div class="col-12">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="bi bi-tag-fill text-primary"></i>
                                </div>
                                <div class="detail-content">
                                    <label class="detail-label">Product Name</label>
                                    <p class="detail-value">@Model.Name</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="bi bi-currency-dollar text-success"></i>
                                </div>
                                <div class="detail-content">
                                    <label class="detail-label">Price</label>
                                    <p class="detail-value">
                                        <span class="badge bg-success fs-5">@Model.Price.ToString("C")</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="bi bi-calendar-check text-info"></i>
                                </div>
                                <div class="detail-content">
                                    <label class="detail-label">Creation Date</label>
                                    <p class="detail-value">@Model.CreationDate.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="bi bi-building text-warning"></i>
                                </div>
                                <div class="detail-content">
                                    <label class="detail-label">Service Provider</label>
                                    <p class="detail-value">
                                        @if (Model.ServiceProviderName != null)
                                        {
                                            <span class="badge bg-primary fs-6">@Model.ServiceProviderName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between gap-2 flex-wrap">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" 
                               asp-route-id="@Model.Id" 
                               class="btn btn-warning"
                               title="Edit this product"
                               aria-label="Edit product">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" 
                               asp-route-id="@Model.Id" 
                               class="btn btn-danger"
                               title="Delete this product"
                               aria-label="Delete product">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i> Product ID: @Model.Id
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-item {
        display: flex;
        align-items: start;
        padding: 1rem;
        background-color: #f8fafc;
        border-radius: 10px;
        border-left: 4px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        background-color: #f1f5f9;
        border-left-color: #667eea;
        transform: translateX(5px);
    }

    .detail-icon {
        font-size: 1.5rem;
        margin-right: 1rem;
        margin-top: 0.25rem;
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        font-weight: 600;
        color: #64748b;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
        display: block;
    }

    .detail-value {
        font-size: 1.125rem;
        color: #1e293b;
        margin: 0;
        font-weight: 500;
    }
</style>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
