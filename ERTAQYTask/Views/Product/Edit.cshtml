@model PLProject.ViewModel.ProductViewModel.DetialProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Product
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label required">
                                <i class="bi bi-tag"></i> Product Name
                            </label>
                            <input asp-for="Name" 
                                   class="form-control" 
                                   placeholder="Enter product name"
                                   aria-required="true"
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Price" class="form-label required">
                                <i class="bi bi-currency-dollar"></i> Price
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" 
                                       class="form-control" 
                                       type="number" 
                                       step="0.01" 
                                       min="0.01"
                                       aria-required="true" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ServiceProviderId" class="form-label required">
                                <i class="bi bi-building"></i> Service Provider
                            </label>
                            <select asp-for="ServiceProviderId" 
                                    class="form-select" 
                                    asp-items="ViewBag.ServiceProviders"
                                    aria-required="true">
                                <option value="">-- Select Service Provider --</option>
                            </select>
                            <span asp-validation-for="ServiceProviderId" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle-fill"></i> 
                            <strong>Note:</strong> Changes will be saved immediately upon submission.
                        </div>

                        <div class="d-flex justify-content-between gap-3 mt-4 flex-wrap">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning text-white" id="submitBtn">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted">
                    <i class="bi bi-clock-history"></i> Last modified: @DateTime.Now.ToString("MMM dd, yyyy")
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add loading state to submit button
        document.getElementById('editForm').addEventListener('submit', function() {
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Saving...';
        });

        // Add required indicator styling
        document.querySelectorAll('.required').forEach(function(label) {
            if (!label.querySelector('.text-danger')) {
                label.innerHTML += ' <span class="text-danger">*</span>';
            }
        });

        // Confirm before leaving with unsaved changes
        var formModified = false;
        document.querySelectorAll('input, select, textarea').forEach(function(field) {
            field.addEventListener('change', function() {
                formModified = true;
            });
        });

        window.addEventListener('beforeunload', function(e) {
            if (formModified) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        document.getElementById('editForm').addEventListener('submit', function() {
            formModified = false;
        });
    </script>
}
