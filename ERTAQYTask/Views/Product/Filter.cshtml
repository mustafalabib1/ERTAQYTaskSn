@model PLProject.ViewModel.ProductViewModel.FilterProductViewModel

@{
    ViewData["Title"] = "Filter Products";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h2 class="mb-0"><i class="bi bi-funnel-fill"></i> Filter Products</h2>
        </div>
        <div class="card-body">
            <form asp-action="Filter" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MinPrice" class="form-label">Minimum Price</label>
                        <input asp-for="MinPrice" class="form-control" type="number" step="0.01" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaxPrice" class="form-label">Maximum Price</label>
                        <input asp-for="MaxPrice" class="form-control" type="number" step="0.01" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FromDate" class="form-label">From Date</label>
                        <input asp-for="FromDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ToDate" class="form-label">To Date</label>
                        <input asp-for="ToDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-12">
                        <label asp-for="ServiceProviderId" class="form-label">Service Provider</label>
                        <select asp-for="ServiceProviderId" class="form-select" asp-items="ViewBag.ServiceProviders">
                            <option value="">-- All Providers --</option>
                        </select>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Apply Filter</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Full List</a>
                </div>
            </form>
        </div>
    </div>

    <div id="filterResults" class="mt-4">
        @if (Model.Products != null)
        {
            <partial name="_ProductList" model="Model.Products" />
        }
    </div>
</div>