@model PLProject.ViewModel.ProductViewModel.FilterProductViewModel

@{
    ViewData["Title"] = "Filter Products";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Filter Products</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Filter" method="post" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-md-6">
                            <label asp-for="MinPrice" class="form-label"></label>
                            <input asp-for="MinPrice" class="form-control" type="number" step="0.01" min="0" placeholder="Minimum Price" />
                            <span asp-validation-for="MinPrice" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="MaxPrice" class="form-label"></label>
                            <input asp-for="MaxPrice" class="form-control" type="number" step="0.01" min="0" placeholder="Maximum Price" />
                            <span asp-validation-for="MaxPrice" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FromDate" class="form-label"></label>
                            <input asp-for="FromDate" class="form-control" type="date" />
                            <span asp-validation-for="FromDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ToDate" class="form-label"></label>
                            <input asp-for="ToDate" class="form-control" type="date" />
                            <span asp-validation-for="ToDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="ServiceProviderId" class="form-label"></label>
                            <select asp-for="ServiceProviderId" asp-items="ViewBag.ServiceProviders" class="form-select">
                                <option value="">-- All Service Providers --</option>
                            </select>
                            <span asp-validation-for="ServiceProviderId" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <a asp-action="Filter" class="btn btn-secondary">Reset</a>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to Products</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="mt-4">
            <h4>Filtered Results (@Model.Products.Count)</h4>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Creation Date</th>
                            <th>Service Provider</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.CreationDate.ToString("yyyy-MM-dd")</td>
                                <td>@product.ServiceProviderName</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (Model.Products != null && !Model.Products.Any())
    {
        <div class="alert alert-info mt-4" role="alert">
            No products found matching the selected criteria.
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
