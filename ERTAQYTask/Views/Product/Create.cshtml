@model PLProject.ViewModel.ProductViewModel.CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Create New Product
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="productForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label required">
                                <i class="bi bi-tag"></i> Product Name
                            </label>
                            <input asp-for="Name" 
                                   class="form-control" 
                                   placeholder="Enter product name"
                                   aria-required="true"
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Price" class="form-label required">
                                <i class="bi bi-currency-dollar"></i> Price
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" 
                                       class="form-control" 
                                       type="number" 
                                       step="0.01" 
                                       min="0.01"
                                       placeholder="0.00"
                                       aria-required="true" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ServiceProviderId" class="form-label required">
                                <i class="bi bi-building"></i> Service Provider
                            </label>
                            <select asp-for="ServiceProviderId" 
                                    asp-items="ViewBag.ServiceProviders" 
                                    class="form-select"
                                    aria-required="true">
                                <option value="">-- Select Service Provider --</option>
                            </select>
                            <span asp-validation-for="ServiceProviderId" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Choose the provider for this product
                            </small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CreationDate" class="form-label required">
                                <i class="bi bi-calendar-event"></i> Creation Date
                            </label>
                            <input asp-for="CreationDate" 
                                   class="form-control" 
                                   type="date"
                                   aria-required="true" />
                            <span asp-validation-for="CreationDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-3 mt-4 flex-wrap">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-circle"></i> Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted">
                    <i class="bi bi-shield-check"></i> All fields marked with * are required
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add loading state to submit button
        document.getElementById('productForm').addEventListener('submit', function() {
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Creating...';
        });

        // Add required indicator styling
        document.querySelectorAll('.required').forEach(function(label) {
            if (!label.querySelector('.text-danger')) {
                label.innerHTML += ' <span class="text-danger">*</span>';
            }
        });
    </script>
}
