@model IEnumerable<PLProject.ViewModel.ProductViewModel.GetAllProductViewModel>

@if (Model != null && Model.Any())
{
    <div class="mb-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-check-circle text-success"></i> 
            Found @Model.Count() product(s)
        </h5>
    </div>
    <partial name="_ProductList" model="Model" />
}
else
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="bi bi-search"></i>
        </div>
        <h3 class="empty-state-title">No Products Found</h3>
        <p class="empty-state-text">
            Try adjusting your filter criteria to find what you're looking for.
        </p>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> View All Products
        </a>
    </div>
}
